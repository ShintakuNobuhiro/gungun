<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.shintaku.test.MissionActivity"
    android:theme="@style/Base.V11.Theme.AppCompat.Dialog">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="テスト"
        android:id="@+id/checkButton"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/checkButton2"
        android:layout_toStartOf="@+id/checkButton2"
        android:layout_alignBottom="@+id/checkButton2"
        android:checked="false"
        android:background="@color/lightblue" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="テスト2"
        android:id="@+id/checkButton2"
        android:width="300dp"
        android:height="250dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/checkButton3"
        android:layout_toEndOf="@+id/checkButton3"
        android:background="@color/green" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="テスト3"
        android:id="@+id/checkButton3"
        android:width="300dp"
        android:height="250dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/orange" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="テスト4"
        android:id="@+id/checkButton4"
        android:width="300dp"
        android:height="250dp"
        android:layout_alignTop="@+id/checkButton3"
        android:layout_toRightOf="@+id/checkButton3"
        android:layout_toEndOf="@+id/checkButton3"
        android:background="@color/red" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="決定"
        android:id="@+id/button2"
        android:width="200dp"
        android:height="100dp"
        android:layout_alignBottom="@+id/checkButton4"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textSize="50dp"
        android:background="@color/blue" />

</RelativeLayout>
