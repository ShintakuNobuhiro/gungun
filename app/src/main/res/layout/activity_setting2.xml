<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.shintaku.test.Setting2Activity
    ">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="ジャンル"
        android:id="@+id/textView"
        android:textSize="30dp"
        android:password="false"
        android:phoneNumber="false"
        android:gravity="center"
        android:width="200dp"
        android:height="200dp"
        android:theme="@style/Base.V11.Theme.AppCompat.Dialog"
        android:layout_alignBottom="@+id/mission2"
        android:textColor="@color/black"
        android:layout_alignRight="@+id/button5"
        android:layout_alignEnd="@+id/button5"
        android:background="@color/lightblue" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="もどる"
        android:id="@+id/button5"
        android:width="200dp"
        android:height="100dp"
        android:textSize="50dp"
        android:background="@color/blue"
        android:textColor="@color/white"
        android:theme="@style/Base.V11.Theme.AppCompat.Dialog"
        android:layout_alignTop="@+id/mission5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/mission5" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/loading"
        android:id="@+id/mission1"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:width="600dp"
        android:height="65dp"
        android:theme="@style/Base.V11.Theme.AppCompat.Dialog"
        android:background="@color/blue"
        android:textSize="25dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/loading"
        android:id="@+id/mission2"
        android:width="600dp"
        android:height="65dp"
        android:theme="@style/Base.V11.Theme.AppCompat.Dialog"
        android:background="@color/blue"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/mission1"
        android:layout_marginTop="40dp"
        android:textSize="25dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/loading"
        android:id="@+id/mission3"
        android:width="600dp"
        android:height="65dp"
        android:theme="@style/Base.V11.Theme.AppCompat.Dialog"
        android:background="@color/blue"
        android:layout_below="@+id/mission2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="40dp"
        android:textSize="25dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/loading"
        android:id="@+id/mission4"
        android:width="600dp"
        android:height="65dp"
        android:theme="@style/Base.V11.Theme.AppCompat.Dialog"
        android:background="@color/blue"
        android:layout_below="@+id/mission3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="40dp"
        android:textSize="25dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/loading"
        android:id="@+id/mission5"
        android:width="600dp"
        android:height="65dp"
        android:theme="@style/Base.V11.Theme.AppCompat.Dialog"
        android:background="@color/blue"
        android:layout_below="@+id/mission4"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="40dp"
        android:textSize="25dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="←"
        android:id="@+id/prevLevel"
        android:theme="@style/Base.V11.Theme.AppCompat.Dialog"
        android:background="@color/blue"
        android:textSize="30dp"
        android:gravity="center"
        android:layout_alignTop="@+id/nextLevel"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/mission3" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="→"
        android:id="@+id/nextLevel"
        android:theme="@style/Base.V11.Theme.AppCompat.Dialog"
        android:background="@color/blue"
        android:textSize="30dp"
        android:gravity="center"
        android:layout_alignTop="@+id/mission3"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView"
        android:layout_above="@+id/mission4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="レベル\n1/4"
        android:id="@+id/level"
        android:gravity="center"
        android:textSize="25dp"
        android:textColor="@color/black"
        android:layout_alignTop="@+id/prevLevel"
        android:layout_toRightOf="@+id/prevLevel"
        android:layout_toEndOf="@+id/prevLevel"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="←"
        android:id="@+id/prevPage"
        android:theme="@style/Base.V11.Theme.AppCompat.Dialog"
        android:background="@color/blue"
        android:textSize="30dp"
        android:gravity="center"
        android:layout_alignTop="@+id/page"
        android:layout_toLeftOf="@+id/level"
        android:layout_toStartOf="@+id/level"
        android:layout_above="@+id/mission5" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="ページ\n1/6"
        android:id="@+id/page"
        android:gravity="center"
        android:textSize="25dp"
        android:textColor="@color/black"
        android:layout_above="@+id/mission5"
        android:layout_alignRight="@+id/level"
        android:layout_alignEnd="@+id/level" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="→"
        android:id="@+id/nextPage"
        android:theme="@style/Base.V11.Theme.AppCompat.Dialog"
        android:background="@color/blue"
        android:textSize="30dp"
        android:gravity="center"
        android:layout_alignTop="@+id/page"
        android:layout_alignRight="@+id/button5"
        android:layout_alignEnd="@+id/button5"
        android:layout_alignBottom="@+id/page" />

</RelativeLayout>
