<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.shintaku.test.Setting2Activity
    ">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="ジャンル"
        android:id="@+id/textView"
        android:textSize="30dp"
        android:background="@color/blue"
        android:textColor="@color/white"
        android:password="false"
        android:phoneNumber="false"
        android:gravity="center"
        android:width="200dp"
        android:height="200dp"
        android:theme="@style/Base.V11.Theme.AppCompat.Dialog"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="戻る"
        android:id="@+id/button5"
        android:width="200dp"
        android:height="100dp"
        android:textSize="50dp"
        android:background="@color/blue"
        android:textColor="@color/white"
        android:theme="@style/Base.V11.Theme.AppCompat.Dialog"
        android:layout_alignBottom="@+id/mission5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Button"
        android:id="@+id/mission1"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:width="600dp"
        android:height="65dp"
        android:theme="@style/Base.V11.Theme.AppCompat.Dialog"
        android:background="@color/blue" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Button"
        android:id="@+id/mission2"
        android:width="600dp"
        android:height="65dp"
        android:theme="@style/Base.V11.Theme.AppCompat.Dialog"
        android:background="@color/blue"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/mission1"
        android:layout_marginTop="40dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Button"
        android:id="@+id/mission3"
        android:width="600dp"
        android:height="65dp"
        android:theme="@style/Base.V11.Theme.AppCompat.Dialog"
        android:background="@color/blue"
        android:layout_below="@+id/mission2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="40dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Button"
        android:id="@+id/mission4"
        android:width="600dp"
        android:height="65dp"
        android:theme="@style/Base.V11.Theme.AppCompat.Dialog"
        android:background="@color/blue"
        android:layout_below="@+id/mission3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="40dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Button"
        android:id="@+id/mission5"
        android:width="600dp"
        android:height="65dp"
        android:theme="@style/Base.V11.Theme.AppCompat.Dialog"
        android:background="@color/blue"
        android:layout_below="@+id/mission4"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="40dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="←"
        android:id="@+id/prevLevel"
        android:theme="@style/Base.V11.Theme.AppCompat.Dialog"
        android:background="@color/blue"
        android:textSize="30dp"
        android:gravity="center"
        android:layout_alignTop="@+id/nextLevel"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="→"
        android:id="@+id/nextLevel"
        android:theme="@style/Base.V11.Theme.AppCompat.Dialog"
        android:background="@color/blue"
        android:textSize="30dp"
        android:gravity="center"
        android:layout_alignBottom="@+id/mission3"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="レベル1"
        android:id="@+id/level"
        android:background="@color/blue"
        android:textColor="@color/white"
        android:layout_toRightOf="@+id/prevLevel"
        android:layout_toStartOf="@+id/nextLevel"
        android:gravity="center"
        android:textSize="20dp"
        android:layout_alignBottom="@+id/mission3"
        android:layout_alignTop="@+id/prevLevel" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="←"
        android:id="@+id/prevPage"
        android:theme="@style/Base.V11.Theme.AppCompat.Dialog"
        android:background="@color/blue"
        android:textSize="30dp"
        android:gravity="center"
        android:layout_alignTop="@+id/mission4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="ページ1"
        android:id="@+id/page"
        android:background="@color/blue"
        android:textColor="@color/white"
        android:gravity="center"
        android:textSize="20dp"
        android:layout_alignTop="@+id/prevPage"
        android:layout_toRightOf="@+id/prevPage"
        android:layout_alignBottom="@+id/prevPage"
        android:layout_alignRight="@+id/level"
        android:layout_alignEnd="@+id/level" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="→"
        android:id="@+id/nextPage"
        android:theme="@style/Base.V11.Theme.AppCompat.Dialog"
        android:background="@color/blue"
        android:textSize="30dp"
        android:gravity="center"
        android:layout_alignTop="@+id/mission4"
        android:layout_toRightOf="@+id/page"
        android:layout_toEndOf="@+id/page" />

</RelativeLayout>
